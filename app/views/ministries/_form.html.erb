<%= simple_form_for(@ministry) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :meeting_time %>
    <%= f.input :meeting_day %>
    <%= f.input :dues_collected %>
    <%= f.input :balance_avaialable %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
