<%= simple_form_for(@account) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.number_field :account_number %>
    <%= f.input number_to_currency :balance %>
    <%= f.input :comments %>
    <%= f.input :account_type %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
