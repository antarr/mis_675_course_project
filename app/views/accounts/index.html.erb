<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Account number</th>
    <th>Balance</th>
    <th>Comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.name %></td>
    <td><%= account.account_number %></td>
    <td><%= number_to_currency account.balance %></td>
    <td><%= account.comments %></td>
    <td><%= link_to 'Show', account %></td>
  </tr>
<% end %>
</table>

