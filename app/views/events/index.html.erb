<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Estimated cost</th>
    <th>Actual cost</th>
    <th>Comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= number_to_currency event.estimated_cost %></td>
    <td><%= number_to_currency event.actual_cost %></td>
    <td><%= truncate(event.comments, :length => 85, :omission => '[...]', :separator => '.') %></td>
    <td><%= link_to 'Show', event %></td>
  </tr>
<% end %>
</table>

