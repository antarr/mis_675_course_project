<%= simple_form_for(@budget_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :cost_per %>
    <%= f.input :quantity %>
    <%= f.association :budget %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
